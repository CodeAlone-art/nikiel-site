---
import "../styles/global.css"; // ⟵ dołączamy globalne style (bez zmiany wyglądu)
const { title = 'NIKIEL', description = 'Official site of NIKIEL' } = Astro.props;
---
<!doctype html>
<html lang="pl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />
  </head>
  <body>
    <slot />
  </body>
</html>
