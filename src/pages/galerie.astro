---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";

const collections = [
  { id: 'cube', name: 'Cube', cover: '/images/cube/Linia Cube okladka.JPG', href: '/galeria/cube' },
  { id: 'totalcolor', name: 'Totalcolor', cover: '/images/totalcolor/Linia totalcolor okladka.JPG', href: '/galeria/totalcolor' }
];
---
<BaseLayout title="NIKIEL — Galerie">
  <Navbar />
  <div class="nav-spacer" aria-hidden="true"></div>

  <main>
    <h1 class="ttl">Galerie</h1>
    <section class="cards" aria-label="Lista kolekcji">
      {collections.map((c) => (
        <a class="card" href={c.href} aria-label={`Otwórz ${c.name}`}>
          <img src={c.cover} alt={c.name} loading="lazy" decoding="async" />
          <div class="overlay"><h3>{c.name}</h3></div>
        </a>
      ))}
    </section>
  </main>

  <style>
    :root { --bg:#0e0e0e; --fg:#f2f2f2; --muted:#b6b6b6; --card:#151515; --gap:clamp(10px,2vw,18px); --r:18px; }
    *{box-sizing:border-box}
    body{background:var(--bg); color:var(--fg)}
    .nav-spacer{ height: 64px; }
    main{padding:18px clamp(16px,4vw,48px) 48px}
    .ttl{margin:8px 0 16px; font-size:1.15rem; color:var(--muted); font-weight:600}
    .cards{display:grid;grid-template-columns:repeat(auto-fit,minmax(260px,1fr));gap:var(--gap)}
    .card{position:relative;border-radius:var(--r);overflow:hidden;background:var(--card);border:1px solid #1f1f1f}
    .card img{width:100%;height:100%;display:block;object-fit:cover;aspect-ratio:4/5;transition:transform 300ms ease}
    .card:hover img{transform:scale(1.035)}
    .overlay{position:absolute;inset:0;display:grid;place-items:end start;background:linear-gradient(to top,rgba(0,0,0,.58),rgba(0,0,0,.05) 60%,transparent);padding:16px}
    h3{margin:0}
  </style>
</BaseLayout>
