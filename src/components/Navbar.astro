---
const links = [
  { href: "/",          label: "Start" },
  { href: "/portfolio", label: "Portfolio" },
  { href: "/galeria",   label: "Galeria" },
  { href: "/kontakt",   label: "Kontakt" },
];
---

<nav class="site-nav" aria-label="Główne">
  <!-- ✅ Ostateczna wersja logotypu: jedno odwrócone K, bez duplikatu -->
  <a href="/" class="brand" aria-label="NIKIEL — strona główna">
    NI<span class="rev">K</span>IEL
  </a>

  <button class="burger" aria-label="Otwórz menu" aria-expanded="false" id="burgerBtn">
    <span class="line"></span><span class="line"></span><span class="line"></span>
  </button>

  <ul id="menuList" class="menu">
    {links.map((l) => (
      <li><a href={l.href}>{l.label}</a></li>
    ))}
  </ul>
</nav>

<style>
  /* Pasek nawigacji */
  .site-nav {
    position: sticky;
    top: 0;
    z-index: 100;
    display: flex;
    align-items: center;
    gap: 16px;
    height: 64px;
    padding: 0 18px;
    background: #0e0e0ee6;
    border-bottom: 1px solid #1c1c1c;
    backdrop-filter: blur(8px);
    color: #f2f2f2;
  }

  /* Logotyp */
  .brand {
    margin-right: auto;
    font-weight: 700;
    letter-spacing: 0.10em; /* naturalny rytm liter */
    text-transform: uppercase;
    color: inherit;
    text-decoration: none;
    white-space: nowrap;
    font-kerning: normal;
  }

  /* Odwrócone „K” – precyzyjny kerning */
  .brand .rev {
    display: inline-block;
    transform: scaleX(-1);
    transform-origin: 50% 50%;
    margin-left: -0.06em;  /* dosunięcie do I */
    margin-right: -0.04em; /* zacieśnienie z E */
  }

  /* Linki menu */
  .menu {
    display: flex;
    list-style: none;
    gap: 18px;
    margin: 0;
    padding: 0;
  }

  .menu a {
    color: inherit;
    text-decoration: none;
    opacity: 0.9;
    transition: opacity 0.15s ease;
  }

  .menu a:hover {
    opacity: 1;
  }

  /* Burger (mobile) */
  .burger {
    display: none;
    margin-left: auto;
    background: #ffffff14;
    color: #fff;
    border: 1px solid #ffffff2a;
    padding: 8px 12px;
    border-radius: 10px;
    cursor: pointer;
  }

  .line {
    display: block;
    width: 18px;
    height: 2px;
    background: #fff;
    margin: 3px 0;
  }

  @media (max-width: 760px) {
    .burger {
      display: block;
    }

    .menu {
      position: fixed;
      inset: 76px 12px auto 12px;
      background: #121212;
      border: 1px solid #242424;
      border-radius: 14px;
      padding: 12px;
      flex-direction: column;
      gap: 8px;
      display: none;
    }

    .menu.open {
      display: flex;
    }
  }
</style>

<script>
  const btn = document.getElementById('burgerBtn');
  const menu = document.getElementById('menuList');
  if (btn && menu) {
    btn.addEventListener('click', () => {
      const open = menu.classList.toggle('open');
      btn.setAttribute('aria-expanded', String(open));
    });
  }
</script>
